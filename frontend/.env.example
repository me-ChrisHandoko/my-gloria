# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# Clerk Authentication (Get from https://clerk.dev)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_publishable_key_here
CLERK_SECRET_KEY=your_secret_key_here

# Clerk URLs Configuration
# Note: Sign-up is disabled - users are managed by administrators in Clerk Dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Development Options
# Set to 'true' to bypass email validation in development (when backend is not available)
NEXT_PUBLIC_BYPASS_EMAIL_VALIDATION=false