# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/database_name"
DATABASE_POOL_SIZE=10

# Application Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# API Configuration
API_PREFIX=api
API_VERSION=v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Security
COOKIE_SECRET=your-cookie-secret-here
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=10485760
MAX_FILES=5
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=debug

# Clerk Auth (Required for authentication)
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Clerk Webhook (Optional for local development, required for production)
# CLERK_WEBHOOK_SECRET=whsec_xxxxx

# Redis Configuration (for Bull Queue and Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# Audit Module Configuration
AUDIT_INTEGRITY_SECRET=your-secret-key-for-audit-integrity
AUDIT_ASYNC_ENABLED=true
AUDIT_BATCH_THRESHOLD=10
AUDIT_CRITICAL_MODULES=auth,user,permission,role,approval

# Session Configuration
SESSION_SECRET=your-session-secret

# Email Configuration (Optional - for email notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-email-password
# EMAIL_FROM=YPK Gloria System <noreply@ypkgloria.org>

# Notification Provider Configuration
NOTIFICATION_EMAIL_PROVIDER=postmark # Options: postmark, smtp, sendgrid

# Postmark Configuration (Required if using Postmark provider)
# POSTMARK_SERVER_TOKEN=your-postmark-server-token
# POSTMARK_FROM_EMAIL=noreply@yourcompany.com

# Notification Batch Processing Configuration
BATCH_MAX_SIZE=100
BATCH_MAX_CONCURRENCY=10
BATCH_TIMEOUT_MS=5000
EMAIL_POOL_SIZE=5
BATCH_DYNAMIC_SIZING=true

# Notification Aggregation Configuration
AGGREGATION_ENABLED=true
AGGREGATION_WINDOW_MS=300000
AGGREGATION_MAX_COUNT=20